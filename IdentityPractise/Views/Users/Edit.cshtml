@model EditUserViewModel

@{
    ViewData["Title"] = "Edit User";
}

<h2 class="text-center mb-5">Edit User</h2>
<div class="row">
    <div class="col col-md-6 offset-md-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id">
            <div class="form-floating mb-2">
                <input asp-for="FirstName" class="form-control"
                       autocomplete="first name" aria-required="true" maxlength="10" minlength="2"/>
                <label asp-for="FirstName"></label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="LastName" class="form-control"
                       autocomplete="last name" aria-required="true" maxlength="10" minlength="2"/>
                <label asp-for="LastName"></label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Email" class="form-control" autocomplete="email" aria-required="true"/>
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-2">
                <input asp-for="UserName" class="form-control"
                       autocomplete="user name" aria-required="true" maxlength="20" minlength="5"/>
                <label asp-for="UserName"></label>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-center gap-2">
                <button type="submit" class="btn btn-primary">Edit</button>
                <a asp-action="Index" class="btn btn-danger">Cancel</a>
            </div>
        </form>
    </div>
</div>