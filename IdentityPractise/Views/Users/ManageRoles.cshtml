@model UserRolesViewModel

@{
    ViewData["Title"] = "Manage Roles";
}

<h2>@Model.UserName</h2>
<p>Add/Remove roles</p>
<hr>

<form asp-action="ManageRoles">
    <input type="hidden" asp-for="UserId">
    <input type="hidden" asp-for="UserName">
    @for (int i = 0; i < Model.Roles.Count(); i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model.Roles[i].Name">
            <input type="hidden" asp-for="@Model.Roles[i].Id">
            <input class="form-check-input" asp-for="Roles[i].Selected">
            <label class="form-check-label" asp-for="Roles[i].Selected">
               @Model.Roles[i].Name
            </label>
        </div>
    }
    <hr>
    <button class="btn btn-primary">Save</button>
</form>